                           </children>
                        </VBox>
                        <VBox fx:id="globalBirdsDetails" alignment="CENTER" prefHeight="500.0" prefWidth="100.0">
                           <children>
                              <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
