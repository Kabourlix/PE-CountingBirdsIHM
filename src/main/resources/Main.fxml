                        <HBox fx:id="Boxes1" layoutX="50.0" layoutY="10.0" prefHeight="100.0" prefWidth="292.0" spacing="15.0">
                           <children>
                              <Button fx:id="addButton" disable="true" mnemonicParsing="false" onAction="#addIsClicked" text="Add">
                                 <font>
                                    <Font size="25.0" />
                                 </font>
                              </Button>
                           </children>
                           <padding>
                              <Insets top="25.0" />
                           </padding>
                        </HBox>
                     </children>
