                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </AnchorPane>
                              <TextField fx:id="birdSpecies" maxHeight="30.0" maxWidth="220.0" minHeight="30.0" minWidth="150.0" prefHeight="30.0" prefWidth="180.0" onAction="#onBirdSpeciesChanged"/>
